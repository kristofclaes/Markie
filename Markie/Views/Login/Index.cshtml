@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Markie.ViewModels.LoginViewModel>
@{
    Layout = "AdminLayout.cshtml";
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="span4 offset4">
        <form method="post">
            <legend>Login</legend>
            <div class="control-group">
                <label class="control-label">Login</label>
                <div class="controls">
                    <input type="text" id="login" name="login" class="span4" value="@Model.Login" />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Password</label>
                <div class="controls">
                    <input type="password" id="password" name="password" class="span4" />
                </div>
            </div>
            
            @if (Model.HasError)
            {
                <div id="login-error" class="alert alert-error">
                    Invalid combination of login and password.
                </div>
            }

            <div class="form-actions">
                <input type="submit" value="Login" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>