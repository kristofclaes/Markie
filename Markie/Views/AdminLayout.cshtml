<!DOCTYPE html>

<html>
    <head>
        <title>@ViewBag.Title</title>
        <link href="/Content/css/bootstrap.min.css" rel="stylesheet" />
        <link href="/Content/css/admin.css" rel="stylesheet" />
    </head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <span class="brand">Markie</span>
                    <div class="navbar-form pull-right">
                        <input class="span4" id="newDrafTitle" type="text" placeholder="Add a new draft">
                        <a href="#" class="btn" title="Add" id="addNewDraft"><i class="icon icon-plus"></i></a>
                        <a href="#" class="btn" title="Add and edit" id="addAndEditNewDraft"><i class="icon icon-plus"></i> <i class="icon icon-white icon-chevron-right"></i> <i class="icon icon-pencil"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div id="container" class="container">
            @RenderBody()
        </div>
        
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
        <script type="text/javascript">
            if (typeof jQuery === 'undefined') {
                document.write(unescape("%3Cscript src='/Content/js/jquery-1.8.1.min.js' type='text/javascript'%3E%3C/script%3E"));
            }
        </script>
        <script src="/Content/js/bootstrap.min.js"></script>
        <script src="/Content/js/TinyPubSub.min.js"></script>
        <script src="/Content/js/Alerter.js"></script>
        <script src="/Content/js/DraftSaver.js"></script>
        
        <script type="text/javascript">
            Markie.draftSaver.init('#newDrafTitle', '#addNewDraft', '#addAndEditNewDraft');
        </script>
    </body>
</html>